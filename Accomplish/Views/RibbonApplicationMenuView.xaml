<RibbonApplicationMenu x:Class="Accomplish.Views.RibbonApplicationMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Accomplish.Views"
             xmlns:properties="clr-namespace:Accomplish.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
            <RibbonApplicationMenuItem Header="{x:Static properties:Resources.New}" Command="{Binding NewCommand}"/>
            <RibbonApplicationMenuItem Header="{x:Static properties:Resources.Open}" Command="{Binding OpenCommand}"/>
            <RibbonApplicationMenuItem Header="{x:Static properties:Resources.Save}" Command="{Binding SaveCommand}"/>
            <RibbonApplicationMenuItem Header="{x:Static properties:Resources.Exit}" Command="{Binding ExitCommand}"/>
</RibbonApplicationMenu>


